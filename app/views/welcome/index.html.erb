<!--
       If you want to change #bootstrap-touch-slider id then you have to change Carousel-indicators and Carousel-Control  #bootstrap-touch-slider slide as well
       Slide effect: slide, fade
       Text Align: slide_style_center, slide_style_left, slide_style_right
       Add Text Animation: https://daneden.github.io/animate.css/
       -->


       <div id="bootstrap-touch-slider" class="carousel bs-slider slide  control-round indicators-line" data-ride="carousel" data-pause="hover" data-interval="5000" >

           <!-- Indicators -->
           <ol class="carousel-indicators">
               <li data-target="#bootstrap-touch-slider" data-slide-to="0" class="active"></li>
               <li data-target="#bootstrap-touch-slider" data-slide-to="1"></li>
               <li data-target="#bootstrap-touch-slider" data-slide-to="2"></li>
           </ol>

           <!-- Wrapper For Slides -->
           <div class="carousel-inner" role="listbox">

               <!-- Third Slide -->
               <div class="item active">

                   <!-- Slide Background -->
                   <img src="http://ww2.sinaimg.cn/large/006tNc79gy1ff0d8q4y3uj31kw0qmkjo.jpg" alt="Bootstrap Touch Slider"  class="slide-image"/>
                   <div class="bs-slider-overlay"></div>

                   <div class="container">
                       <div class="row">
                           <!-- Slide Text Layer -->
                           <div class="slide-text slide_style_left">
                               <h1 data-animation="animated zoomInRight">如果你是千里马</h1>
                               <p data-animation="animated fadeInLeft">我们这里有伯乐</p>
                               <a href="/jobs" class="btn btn-default" data-animation="animated fadeInLeft">应聘工作</a>
                               <a href="/admin/jobs"class="btn btn-primary" data-animation="animated fadeInRight">发布工作</a>
                           </div>
                       </div>
                   </div>
               </div>
               <!-- End of Slide -->

               <!-- Second Slide -->
               <div class="item">

                   <!-- Slide Background -->
                   <img src="http://ww3.sinaimg.cn/large/006tNc79gy1ff0d96f60nj31kw0qmhdy.jpg" alt="Bootstrap Touch Slider"  class="slide-image"/>
                   <div class="bs-slider-overlay"></div>
                   <!-- Slide Text Layer -->
                   <div class="slide-text slide_style_center">
                       <h1 data-animation="animated flipInX">你想把你的技能变现</h1>
                       <p data-animation="animated lightSpeedIn">那么这里可以帮你</p>
                       <a href="/jobs"  class="btn btn-default" data-animation="animated fadeInUp">应聘工作</a>
                       <a href="/admin/jobs" class="btn btn-primary" data-animation="animated fadeInDown">发布工作</a>
                   </div>
               </div>
               <!-- End of Slide -->

               <!-- Third Slide -->
               <div class="item">

                   <!-- Slide Background -->
                   <img src="http://ww3.sinaimg.cn/large/006tNc79gy1ff0da3k2uyj31kw0qmqv5.jpg" alt="Bootstrap Touch Slider"  class="slide-image"/>
                   <div class="bs-slider-overlay"></div>
                   <!-- Slide Text Layer -->
                   <div class="slide-text slide_style_right">
                       <h1 data-animation="animated zoomInLeft">想转换行业</h1>
                       <p data-animation="animated fadeInRight">这里是各行各种的精英的聚集地,给你最专业的咨询</p>
                       <a href="/jobs" class="btn btn-default" data-animation="animated fadeInLeft">应聘工作</a>
                       <a href="/admin/jobs" class="btn btn-primary" data-animation="animated fadeInRight">发布工作</a>
                   </div>
               </div>
               <!-- End of Slide -->


           </div><!-- End of Wrapper For Slides -->

           <!-- Left Control -->
           <a class="left carousel-control" href="#bootstrap-touch-slider" role="button" data-slide="prev">
               <span class="fa fa-angle-left" aria-hidden="true"></span>
               <span class="sr-only">Previous</span>
           </a>

           <!-- Right Control -->
           <a class="right carousel-control" href="#bootstrap-touch-slider" role="button" data-slide="next">
               <span class="fa fa-angle-right" aria-hidden="true"></span>
               <span class="sr-only">Next</span>
           </a>

       </div> <!-- End  bootstrap-touch-slider Slider -->



